@model Elmarknad.Models.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Start";
}
<style>
    .custom {
        width: 100% !important;
        height: 100% !important;
        background: url(../../Images/bakgrund.jpg) center center !important;
        background-size: cover !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
    }
</style>
<div class="col-md-4">
    <div class="jumbotron center-block" style="background-color: rgba(255, 255, 255, 0.8); margin-top: 3%;">
        <h3 style="color: #1b5b82;">Jämför elpriser och byt elavtal</h3>
        
        <div class="col-lg-6" style="font-size: 90%; margin-bottom: 2%;">
            Hos elmarknad.se jämför du elpriser från alla elbolag. Fyll i dina uppgifter och byt enkelt till det bästa elavtalet.
        </div>  
        <div class="col-lg-6" >
             <ul class="list-group">
                 <li style="list-style: none;"><span><i class="glyphicon glyphicon-chevron-down" style="color: #f07451 !important;"></i></span>Jämför alla elbolag</li>
                 <li style="list-style: none; margin-top: 2%;"><span><i class="glyphicon glyphicon-chevron-down" style="color: #f07451 !important;"></i></span>Snabbt & enkelt</li>
                 <li style="list-style: none;  margin-top: 2%;"><span><i class="glyphicon glyphicon-chevron-down" style="color: #f07451 !important;"></i></span>Helt kostnadsfritt</li>
              </ul>
         </div>
            
        
            @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {


                <div class="col-md-offset-1">

                    <div class="form-group center-block">
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Postnummer, "{0:#.#}", new { @class = "form-control", @placeholder = "Postnummer.." })
                            @Html.ValidationMessageFor(m => m.Postnummer, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group center-block">
                        <div class="col-md-12">
                            @Html.DropDownListFor(m => m.Förbrukning, Model.FörbrukningList, "Välj din förbrukning", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Förbrukning, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group center-block">
                        <div class="col-md-12">
                            @Html.DropDownListFor(m => m.Typ, Model.TypList, "Välj typ av avtal", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Typ, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Sök" class="btn btn-block" style="background-color: #f07451 !important;" />
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
