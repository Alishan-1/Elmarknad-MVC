<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Elmarknad</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    <meta charset="UTF-8">
</head>
<body>

    <div class="navbar navbar-dark navbar-fixed-top" style="background-color: #1b5b82;">
        <div class="container" style="color: #fff; background-color: #1b5b82;">
            <div class="navbar-header" style="color: #fff; background-color: #1b5b82;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" style="color: #fff !important; background-color: #fff !important;"></span>
                    <span class="icon-bar" style="color: #fff !important; background-color: #fff !important;"></span>
                    <span class="icon-bar" style="color: #fff !important; background-color: #fff !important;"></span>
                </button>
                <a href="~/Home/Index"><img src="~/Images/logo.png" class="img-responsive" style="width: 50%; margin-top: 2%;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Jämför Elpriser", "Index", "Home", new { @style = "color: #fff !important; background-color: #1b5b82 !important;" })</li>
                    <li>@Html.ActionLink("Så går det till", "Index", "Admin", new { @style = "color: #fff !important; background-color: #1b5b82 !important;" })</li>
                    <li>@Html.ActionLink("Om Oss", "Index", "Admin", new { @style = "color: #fff !important; background-color: #1b5b82 !important;" })</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { @style = "color: #fff !important; background-color: #1b5b82 !important;" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content custom">
        @RenderBody()

    </div>
    


    <section id="footer">
        <div class="container">
            <div class="row text-center text-xs-center text-sm-left text-md-left">
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <h5>Våra tjänster</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Jämför Elpriser</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Så går det till</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Blogg</a></li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <h5>Kundservice</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Frågor och Svar</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Ordlista</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Vilkor</a></li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-4">
                    <h5>Elmarknad.se</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Om oss</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Kontakt</a></li>
                        <li><a href="javascript:void();"><i class="fa fa-angle-double-right"></i>Karriär</a></li>
                    </ul>
                </div>
            </div>
            <div class="row" style="margin-bottom: 0 !important;">
                <div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-2 text-center text-white">
                    <p><u><p class="text-center" style="color: #fff;">Copyright &copy; 2017 Elmarknad.se</p></u></p>

                </div>
                </hr>
            </div>
        </div>
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/datepicker")

</body>
</html>
