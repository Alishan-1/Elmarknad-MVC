@model Elmarknad.Models.ViewModels.EditElbolagViewModel

@{
    ViewBag.Title = "ManageCompany";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Ändra Bolag</h2>
<div class="col-lg-12">
    <div class="col-md-4">

        <img src="../../@Model.Image" class="img-responsive" style="width: 20%; max-height: 400px; min-height: 200px; max-width: 400px; min-width: 200px; " />
        @using (Html.BeginForm("ManageCompany", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            
            <label class="btn btn-primary" style="margin-top: 5px;">
                Ändra / Lägg till logo
                <input type="file" name="img" id="img" class="btn btn-group-sm" hidden style="display: none !important;">
            </label>
            @Html.HiddenFor(m => m.ElBolagId);
            <input type="submit" value="Spara" class="btn btn-primary" style="margin-top: 5px;" />
        }

    </div>
    <div class="col-md-8">
        <div class="form-horizontal">
            @using (Html.BeginForm("EditCompanyName", "Admin", FormMethod.Post))
            {
                @Html.ValidationMessage("Duplicate", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.HiddenFor(m => m.ElBolagId)
                        <input type="submit" value="Spara" class="btn btn-primary" style="margin-top: 5px;" />
                    </div>

                </div>





            }
            @using (Html.BeginForm("EditCompanyNumber", "Admin", FormMethod.Post))
            {

                @Html.ValidationMessage("Number", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.HiddenFor(m => m.ElBolagId)
                        <input type="submit" value="Spara" class="btn btn-primary" style="margin-top: 5px;" />
                    </div>

                </div>



            }
        </div>
    </div>
</div>
<hr />
